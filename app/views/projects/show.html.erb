<section class="container projectShow">
  <h1 class="projectHeader"><%= @project.name.capitalize %></h1>
  <div class="row">
    <div class="col-md-6 col-xs-6">
      <%= image_tag("#{@project.img}", size: "500x400", class: "thumbnail img-responsive center-block") %>
    </div>
    <div class="col-md-6 col-xs-6">
      <h3 class="projectBodyHeader">Explanation</h3>
      <div class="projectBody"><%= "#{@project.body}" %></div>
      <h3 class="projectBodyHeader">Links</h3>  
      <h3 class="projectSubHeader"><%= link_to "GitHub", @project.git %></h3>
      <h3 class="projectSubHeader"><%= link_to "URL", @project.web %></h3>
    </div>
  </div>
</section>
