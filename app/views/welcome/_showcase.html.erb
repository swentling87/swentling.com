<div id="project-showcase" class="carousel slide center-block" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#project-showcase" data-slide-to="0" class="active"></li>
    <li data-target="#project-showcase" data-slide-to="1"></li>
    <li data-target="#project-showcase" data-slide-to="2"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner" role="listbox">
    <div class="item active">
      <%= link_to image_tag("blocchat.png"), project_path(find_project_id_by_img("blocchat")) %>
    </div>
    <div class="item">
      <%= link_to image_tag("store.png"), project_path(find_project_id_by_img("store")) %>
    </div>
    <div class="item">
      <%= link_to image_tag("blocjams.png"), project_path(find_project_id_by_img("blocjams")) %>
    </div>
  </div>

  <!-- Controls -->
  <a class="left carousel-control" href="#project-showcase" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#project-showcase" role="button" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
